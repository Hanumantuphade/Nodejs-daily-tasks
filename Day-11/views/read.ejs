<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <nav class="mb-10">
        <a class="text-blue-500 mb-10" href="/">Back To Home</a>
      </nav>
      <h1 class="text-3xl tracking-tighter mb-3">All User</h1>
      <div class="users flex flex-wrap gap-5">
<% if(users.length > 0){%>
  <% users.forEach((users)=>{%>
<div class="user w-72 bg-zinc-800 p-5 rounded-lg">
          <div class="w-full h-64 bg-zinc-700 rounded-lg overflow-hidden">
            <img
              class="w-full h-full object-cover rounded-lg"
              src="<%=users.image%>"
              alt="user image"
            />
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%=users.name%></h3>
          <h5 class="text-zinc-500"><%= users.email%></h5>
          <div class="flex justify-between  mt-6 gap-3">
            <a class="text-yellow-500" href="/edit/<%= users._id%>">Edit User</a>
            <a class="text-red-500" href="/delete/<%= users._id%>">Delete User</a>
          </div>
        </div>
  <%})%>
<%}else {%>
  <h1 class="text-2xl"> User NOt Yet</h1>
<%} %>

        
      </div>
    </div>
  </body>
</html>
