<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 p-10">
      <!-- Greeting -->
      <h1 class="text-white text-xl">
        <span class="text-sm">hello</span>, <%= user.name %> ğŸ‘‹ğŸ»
      </h1>
      <h3 class="text-sm text-white mt-2">you can create your new post ...</h3>

      <!-- Create Post Form -->
      <form action="/post" method="post" class="mt-3 text-white">
        <textarea
          class="w-1/3 resize-none mb-2 block text-sm rounded-md outline-none border-2 border-zinc-800 bg-transparent p-2"
          placeholder="what's in your mind ?"
          name="content"
        ></textarea>
        <input
          class="block bg-blue-500 rounded-md px-3 text-sm py-2 mb-2 cursor-pointer"
          type="submit"
          value="Create New Post"
        />
      </form>

      <!-- Posts Section -->
      <h3 class="mt-16 text-zinc-400">your posts ...</h3>
      <div class="postContainer mt-5">
        <% if (user.posts && user.posts.length > 0) { %> <%
        user.posts.reverse().forEach((post) => { %>
        <div
          class="w-1/3 bg-zinc-800 mb-2 p-2 mt-4 rounded-md outline-none border-[1px] border-zinc-800"
        >
          <h1 class="text-sm text-blue-500 pb-1">@<%= user.name %></h1>
          <p class="text-md text-white tracking-tight"><%= post.content %></p>
          <small class="mt-2 inline-block text-white"
            ><%= post.likes.length%> likes</small
          >
          <div class="flex gap-4 mt-1">
            <a class="text-blue-500" href="/like/<%= post._id%>"
              ><%= post.likes.indexOf(user._id)=== -1 ? "Like" : "unlike"%></a
            >
            <a class="text-zinc-500" href="/edit/<%= post._id%>">Edit</a>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p class="text-zinc-500 mt-4">You donâ€™t have any posts yet.</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
